<!DOCTYPE html>
<html>
<head>
  <title>MyBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <nav><h1>where words leave off, music begins...</h1></nav>
  </header>


  <div class="content-wrapper">
    <%= link_to 'Home', posts_path %><br>
    <% if logged_in? %>Welcome, <%= current_user.username %>  <%= link_to 'Logout', {controller: "sessions", action: "destroy"},  method: :delete %>
    <% else %><%= link_to 'Login', { controller: "sessions", action: "new"} %> or <%= link_to 'Register', {controller: "users", action: "new"} %><% end %><br><br><br>
<%= yield %>
  </div>
</body>
</html>
